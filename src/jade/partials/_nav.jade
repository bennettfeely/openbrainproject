include ./_icon

mixin nav()
	.nav
		.nav-spacer(onclick="removeNav()")
		nav.nav-menu
			.container
				ul
					li.nav-item.nav-group.discover-group
						a.nav-link.main-nav-link(href="/discover") 
							span Discover
							+icon("rarr")
							+icon("dchev") 
						ul.nav-subgroup
							li.nav-item
								a.nav-link(href="/discover/brainsurvey") 
									span Brain Explorer
							li.nav-item
								a.nav-link(href="/discover/publications") 
									span Publications
							li.nav-item
								a.nav-link(href="/discover/open-data-sets") 
									span Open Data Sets
							li.nav-item
								a.nav-link(href="/discover/experiment-exchange") 
									span Experiment Exchange
					li.nav-item.nav-group.translate-group
						a.nav-link.main-nav-link(href="/translate")
							span Translate
							+icon("rarr")
							+icon("dchev")
						ul.nav-subgroup
							li.nav-item
								a.nav-link(href="/translate/brain-mapping-with-mri")
									span Brain Mapping with MRI
							li.nav-item
								a.nav-link(href="/translate/brain-mapping-during-neurosurgery")
									span Brain Mapping during Neurosurgery
					li.nav-item.nav-group.care-group
						a.nav-link.main-nav-link(href="/care")
							span Care
							+icon("rarr")
							+icon("dchev")
						ul.nav-subgroup
							li.nav-item
								a.nav-link(href="https://www.urmc.rochester.edu/del-monte-neuroscience/translational-brain-mapping.aspx")
									span University of Rochester Neurosurgery
									+icon("external")
							li.nav-item
								a.nav-link(href="/care/resources-for-patients")
									span Resources for Patients
								//- ul.nav-sub-subgroup
								//- 	li.nav-item
								//- 		a.nav-link(href="/XXXXXX")
								//- 			span Stroke
								//- 	li.nav-item
								//- 		a.nav-link(href="/XXXXXX")
								//- 			span Brain Tumor
								//- 	li.nav-item
								//- 		a.nav-link(href="/XXXXXX")
								//- 			span TBI
							li.nav-item
								a.nav-link(href="/care/technology")
									span Technology
	script
		| var html = document.querySelector("html");
		| function addNav() { html.classList.add("has-nav"); }
		| function removeNav() { html.classList.remove("has-nav"); }
		| function toggleNav() { html.classList.toggle("has-nav"); }