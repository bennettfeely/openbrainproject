include ./_icon

mixin nav()
	.nav
		.nav-spacer(onclick="removeNav()")
		nav.nav-menu
			.container
				ul.nav-list
					.primary-nav-items
						li.nav-item.nav-group.discover-group
							a.nav-link.main-nav-link(href="/discover") 
								span Discover
								+icon("rarr")
								+icon("dchev") 
							ul.nav-subgroup
								li.nav-item
									a.nav-link(href="/discover/brainsurvey") 
										span Brain Explorer
								li.nav-item
									a.nav-link(href="/discover/open-data-sets") 
										span Open Data Sets
								li.nav-item
									a.nav-link(href="/discover/experiment-exchange") 
										span Experiment Exchange
						li.nav-item.nav-group.translate-group
							a.nav-link.main-nav-link(href="/translate")
								span Translate
								+icon("rarr")
								+icon("dchev")
							ul.nav-subgroup
								li.nav-item
									a.nav-link(href="/translate/brain-mapping-with-mri")
										span Brain Mapping with MRI
								li.nav-item
									a.nav-link(href="/translate/brain-mapping-during-neurosurgery")
										span Brain Mapping during Neurosurgery
						li.nav-item.nav-group.care-group
							a.nav-link.main-nav-link(href="/care")
								span Care
								+icon("rarr")
								+icon("dchev")
							ul.nav-subgroup
								li.nav-item
									a.nav-link(href="/care/resources-for-patients")
										span Resources for Patients
								li.nav-item
									a.nav-link(href="https://www.urmc.rochester.edu/del-monte-neuroscience/translational-brain-mapping.aspx", target="_blank")
										span University of Rochester Neurosurgery
										+icon("external")
								li.nav-item
									a.nav-link(href="https://www.upmc.com/Services/neurosurgery", target="_blank")
										span University of Pittsburgh Neurosurgery
										+icon("external")
					.secondary-nav-items
						li.nav-item.nav-group.scientific-products-group
							a.nav-link.main-nav-link(href="/scientific-products")
								span Scientific Products
								+icon("rarr")
								+icon("dchev") 
							ul.nav-subgroup
								li.nav-item
									a.nav-link(href="/scientific-products/publications") 
										span Publications
								li.nav-item
									a.nav-link(href="/scientific-products/technology") 
										span Technology
						li.nav-item.nav-group.data-consortium-group
							a.nav-link.main-nav-link(href="/data-consortium") 
								span Data Consortium
						li.nav-item.nav-group.in-the-news-group
							a.nav-link.main-nav-link(href="/in-the-news") 
								span In the News
						li.nav-item.nav-group.join-group
							a.nav-link.main-nav-link(href="/join")
								span Join
								+icon("rarr")
								+icon("dchev") 
							ul.nav-subgroup
								li.nav-item
									a.nav-link(href="/join/contribute") 
										span Contribute Data or Publications
								li.nav-item
									a.nav-link(href="/join/for-patients") 
										span For Patients

	script
		| var html = document.querySelector("html");
		| function addNav() { html.classList.add("has-nav"); }
		| function removeNav() { html.classList.remove("has-nav"); }
		| function toggleNav() { html.classList.toggle("has-nav"); }