include ./_icon

mixin nav()
	.nav
		nav.nav-menu
			.container
				.nav-list
					ul.primary-nav-items
						li.nav-item.nav-group.discover-group(tabindex=0)
							.nav-link.main-nav-link
								span Discover
								+icon("rarr")
								+icon("dchev") 
							ul.nav-subgroup
								li.nav-item
									a.nav-link(href="/brainsurvey") 
										span Brain Survey
								li.nav-item
									a.nav-link(href="/open-data-sets") 
										span Open Data Sets
								li.nav-item
									a.nav-link(href="/experiment-exchange") 
										span Experiment Exchange
						li.nav-item.nav-group.translate-group(tabindex=0)
							.nav-link.main-nav-link
								span Translate
								+icon("rarr")
								+icon("dchev")
							ul.nav-subgroup
								li.nav-item
									a.nav-link(href="/brain-mapping-with-mri")
										span Brain Mapping with MRI
								li.nav-item
									a.nav-link(href="/brain-mapping-during-neurosurgery")
										span Brain Mapping during Neurosurgery
						li.nav-item.nav-group.care-group(tabindex=0)
							.nav-link.main-nav-link
								span Care
								+icon("rarr")
								+icon("dchev")
							ul.nav-subgroup
								li.nav-item
									a.nav-link(href="/resources-for-patients")
										span Resources for Patients
								li.nav-item
									a.nav-link(href="https://www.urmc.rochester.edu/del-monte-neuroscience/translational-brain-mapping.aspx", target="_blank")
										span University of Rochester Neurosurgery
										+icon("external")
								li.nav-item
									a.nav-link(href="https://www.upmc.com/Services/neurosurgery", target="_blank")
										span University of Pittsburgh Neurosurgery
										+icon("external")
					ul.secondary-nav-items
						li.nav-item.nav-group.publications-group
							a.nav-link.main-nav-link(href="/publications") 
								span Publications
						li.nav-item.nav-group.consortium-group
							a.nav-link.main-nav-link(href="/consortium") 
								span Consortium
						li.nav-item.nav-group.in-the-news-group
							a.nav-link.main-nav-link(href="/in-the-news") 
								span In the News
						li.nav-item.nav-group.join-group(tabindex=0)
							.nav-link.main-nav-link
								span Join
								+icon("rarr")
								+icon("dchev") 
							ul.nav-subgroup
								li.nav-item
									a.nav-link(href="/contribute-data-or-publications") 
										span Contribute Data or Publications
								li.nav-item
									a.nav-link(href="/join-as-a-patient") 
										span For Patients