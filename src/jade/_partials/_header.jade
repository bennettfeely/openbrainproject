include ./_icon
include ./_nav

mixin header()
	header
		.container
			a.site-logo-link(href="/")
				.site-logo
					+icon("brain")
					.site-logo-text
						h1 The Open Brain Project
						h2 Translating discovery into care
			.right-header-content
				a.header-social-link(href="https://twitter.com")
					+icon("twitter")
				a.header-social-link(href="https://facebook.com")
					+icon("facebook")
	+nav()
