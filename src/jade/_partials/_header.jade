include ./_icon
include ./_nav

mixin header()
	header
		.container
			a.site-logo-link(href="/")
				.site-logo
					+icon("brain")
					.site-logo-text
						h1.site-title The Open Brain Project
						h2.site-tagline Translating discovery into care
			.right-header-content
				a.header-social-link.twitter(href="https://twitter.com/OpenBrainPro", aria-label="Open Brain Project on Twitter")
					+icon("twitter")
				a.header-social-link.facebook(href="https://www.facebook.com/TheOpenBrainProject/", aria-label="Open Brain Project on Facebook")
					+icon("facebook")
	+nav()
