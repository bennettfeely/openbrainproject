mixin head(pageTitle, pageDescription)
	doctype html
	html(lang="en")
		head
			meta(charset="utf-8")
			meta(name="viewport", content="width=device-width, initial-scale=1")
			
			- if (pageTitle === "")
				title= "The Open Brain Project | Translating discovery into care"
			- else
				title=pageTitle + " | The Open Brain Project"

			// Page description
			meta(name="description", content="The Open Brain Project is a consortium of scientists and clinicians dedicated to advancing knowledge about how the human brain responds to and recovers from injury.")
			
			// Styles
			link(href="../../_css/style.min.css", rel="stylesheet")
			link(href="https://fonts.googleapis.com/css?family=Roboto:400,400i,700&display=swap",rel="stylesheet")
			
			// Icons
			link(rel="apple-touch-icon", sizes="180x180", href="../../_img/apple-touch-icon.png")
			link(rel="icon", type="image/png", sizes="32x32", href="../../_img/favicon-32x32.png")
			link(rel="icon", type="image/png", sizes="16x16", href="../../_img/favicon-16x16.png")
			link(rel="mask-icon", href="../../_img/safari-pinned-tab.svg", color="#fa8072")
			
			// Web appification
			meta(name="application-name" content="Open Brain Project")
			meta(name="rating" content="General")
			meta(name="mobile-web-app-capable", content="yes")
			meta(name="google-site-verification", content="YOgvR065o47Z7E6-UDzVZc-Tbc0Th79ThLqpP3tEP7k")

			// Force IE 8/9/10 to use its latest rendering engine
			meta(http-equiv="x-ua-compatible", content="ie=edge")

			// Facebook meta
			meta(property="og:url" content="https://openbrainproject.org")
			meta(property="og:type" content="website")
			meta(property="og:title" content="The Open Brain Project")
			meta(property="og:image" content="https://openbrainproject.org/_img/screenshot_1080x864.png")
			meta(property="og:image:alt" content="Screenshot of The Open Brain Project website")
			meta(property="og:description" content="The Open Brain Project is a consortium of scientists and clinicians dedicated to advancing knowledge about how the human brain responds to and recovers from injury.")
			meta(property="og:site_name" content="The Open Brain Project")
			meta(property="og:locale" content="en_US")
			meta(property="article:author" content="Brad Mahon")

			// Twitter meta
			meta(name="twitter:card" content="summary")
			meta(name="twitter:site" content="@OpenBrainPro")
			meta(name="twitter:url" content="https://openbrainproject.org")
			meta(name="twitter:title" content="The Open Brain Project")
			meta(name="twitter:description" content="The Open Brain Project is a consortium of scientists and clinicians dedicated to advancing knowledge about how the human brain responds to and recovers from injury.")
			meta(name="twitter:image" content="https://openbrainproject.org/_img/screenshot_1080x864.png")
			meta(name="twitter:image:alt" content="Screenshot of The Open Brain Project website")
